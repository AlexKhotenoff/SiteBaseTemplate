// Sass configuration
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Sass Compile",
            "type": "shell",
            "command": "node-sass scss/style.scss css/style.css",
            "group": "build",
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "type": "npm",
            "script": "scss",
            "path": ".vscode/",
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "type": "npm",
            "script": "scssMin",
            "path": ".vscode/",
            "problemMatcher": [
                "$node-sass"
            ]
        }
    ]
}